{
  "name": "static-site-build",
  "version": "1.0.0",
  "description": "A build system for static sites",
  "main": "index.js",
  "scripts": {
      "test": "echo \"Error: no test specified\" && exit 1",
      "clean": "rm -r public/styles && rm -r public/scripts && rm -r public/images",
      "setup": "rm -rf public && mkdir -p public",

      "build:html": "nunjucks index.njk --path app --out public",
      "watch:html": "onchange 'app/*.njk' 'app/partials/*.njk' -- npm run build:html",

      "prebuild:img": "cd public && mkdir -p images",
      "build:img": "imagemin-newer app/images/ public/images",
      "watch:img": "onchange 'app/images/**/*' -- npm run build:img",

      "prebuild:css": "cd public && mkdir -p styles",
      "build:css": "postcss -u precss -u autoprefixer -s postcss-scss -u cssnano -o public/styles/style.css app/styles/style.css",
      "watch:css": "onchange 'app/styles/**.css' -- npm run build:css",

      "prebuild:js": "cd public && mkdir -p scripts",
      "build:js": "browserify -e app/scripts/index.js -d -o public/scripts/index.js -t [ babelify --presets [ es2015 ] ]",
      "watch:js": "onchange 'app/scripts/**.js' -- npm run build:js",

      "build": "run-s build:html build:img build:css build:js",
      "serve": "live-server public/ --host='dev.vuse-landing.com' --port='8080'",
      "watch": "run-s clean build && run-p serve watch:*"
  },
  "author": "Jeff Coons <jeffcoons@live.com>",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.10.4",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "cssnano": "^3.7.1",
    "imagemin-newer": "^1.0.1",
    "live-server": "^1.0.0",
    "npm-run-all": "^2.2.2",
    "nunjucks": "^2.4.2",
    "nunjucks-cli": "^0.4.8",
    "onchange": "^2.5.0",
    "postcss": "^5.0.21",
    "postcss-cli": "^2.5.2",
    "postcss-scss": "^0.1.8",
    "precss": "^1.4.0",
    "uglify-js": "^2.6.4"
  },
  "dependencies": {
    "jquery": "^3.0.0"
  }
}
